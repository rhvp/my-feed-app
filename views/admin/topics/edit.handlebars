<div class="container">


    <h3 class="alert alert-dark p-3 text-dark text-center">Edit Topic </h3>


    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">
                <thead class="bg-primary">
                <tr>
                    <th>Title</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody class="table-hover bg-dark category-list">
                {{#each topics}}
                    <tr>

                        <td>{{title}}</td>
                        <td class="d-flex justify-content-center">
                            <a href="/admin/topic/edit/{{_id}}" class="btn btn-sm btn-warning mr-2 edit-topic invisible" role="button">Edit</a>
                            <form action="/admin/topic/delete/{{_id}}">
                                <button class="btn btn-sm btn-danger delete-topic invisible"  type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <div class="row p-4">
        <div class="col-md-8">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="update-topic-title" name="title" value="{{topic.title}}">
                    <input type="hidden" class="form-control" id="update-topic-id" name="id" value="{{topic._id}}">
                </div>
                    <button class="btn btn-outline-warning btn-lg" id="update-topic-button">Update Topic</button>
        </div>
    </div>


</div>